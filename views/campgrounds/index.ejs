<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">Add new Campground</a>
            </p>
            <p><form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Search for Campgrounds" class="form-control">
                    <input type="submit" value="search" class="btn btn-primary">
                </div>
            </form></p>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap:wrap;">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds!</h3>
        </div>

        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 text-center" > 
                <img src="<%= campground.image %>" class="img-fluid img-thumbnail">

                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>

            </div>
        <% }); %>
    </div>




</div>

<% include ../partials/footer %>